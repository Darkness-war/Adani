{
  "version": 2,
  "name": "uzumaki-investments",
  "alias": "uzumaki-investments.vercel.app",
  "public": false,
  "regions": ["bom1"],
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "/pages/**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "/assets/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/index.html",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    },
    {
      "src": "/(.*)\\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot)$",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/pages/(.*)",
      "dest": "/pages/$1",
      "headers": {
        "Cache-Control": "public, max-age=0, must-revalidate"
      }
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "status": 404,
      "dest": "/pages/errors/404.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/(.*)\\.(js|css|png|jpg|jpeg|gif|ico|svg)$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/login",
      "destination": "/pages/auth/login.html"
    },
    {
      "source": "/signup",
      "destination": "/pages/auth/signup.html"
    },
    {
      "source": "/dashboard",
      "destination": "/pages/user/dashboard.html"
    },
    {
      "source": "/wallet",
      "destination": "/pages/user/wallet.html"
    },
    {
      "source": "/investments",
      "destination": "/pages/user/investments.html"
    },
    {
      "source": "/profile",
      "destination": "/pages/user/profile.html"
    },
    {
      "source": "/admin",
      "destination": "/pages/admin/admin-dashboard.html"
    },
    {
      "source": "/admin/users",
      "destination": "/pages/admin/users.html"
    },
    {
      "source": "/admin/recharge",
      "destination": "/pages/admin/admin-recharge.html"
    },
    {
      "source": "/terms",
      "destination": "/pages/terms.html"
    },
    {
      "source": "/privacy",
      "destination": "/pages/privacy.html"
    }
  ],
  "redirects": [
    {
      "source": "/home",
      "destination": "/"
    },
    {
      "source": "/admin/dashboard",
      "destination": "/admin"
    },
    {
      "source": "/user/dashboard",
      "destination": "/dashboard"
    }
  ],
  "env": {
    "SUPABASE_URL": "https://atcfrcolbuikjnsoujzw.supabase.co",
    "SUPABASE_ANON_KEY": "sb_publishable_mUDZkzcq09gllPPjk8pGQ_k6APV_gv"
  },
  "functions": {
    "api/*.js": {
      "maxDuration": 10
    }
  },
  "github": {
    "silent": true,
    "autoAlias": true
  },
  "installCommand": "npm install",
  "buildCommand": "echo 'Building Uzumaki Investments...'",
  "outputDirectory": ".",
  "framework": null
}
